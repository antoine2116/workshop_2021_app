<script>
    jQuery(function () {
        // 1er choix
        $('.btn-choisir').click(function() {
           $('#fs-type').hide();
           $('#fs-difficulty').show();
        });

        // Retour au 1er choix
        $('#btnRetour').click(function () {
           $('#fs-type').show();
           $('#fs-difficulty').hide();

           // Clear fieldset difficulty
            $('#fs-difficulty input, select').each(function() {
               $(this).val("");
            });

            // Hide avancé
            $('#btnMoins').click();
        });

        // Affichage options avancées
        $('#btnAvance').click(function () {
           $('#form-avance').show();
           $('#btnAvance').hide();
           $('#btnMoins').show();
        });

        // Cache les options avancées
        $('#btnMoins').click(function () {
           $('#form-avance').hide();
           $('#btnAvance').show();
           $('#btnMoins').hide();
        });
    });
</script>
